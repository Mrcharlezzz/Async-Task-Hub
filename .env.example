# Name for the API shown in docs.
APP_NAME=posttager-pi

# Semantic version number exposed via FastAPI metadata.
APP_VERSION=0.1.0

# Redis URL used as Celery broker and result backend.
REDIS_URL=redis://redis:6379/0

# Maximum number of digits users can request in `/calculate_pi`.
MAX_DIGITS=2000

# Log level for Celery worker processes.
LOG_LEVEL=INFO

# Seconds Celery keeps task results before expiring them.
RESULT_TTL_SECONDS=3600

# Delay (in seconds) per digit to simulate heavy pi computation.
SLEEP_PER_DIGIT_SEC=0.1

# Strategy for rounding intermediate Pi computation results.
ROUNDING_POLICY=TRUNCATE

#db
POSTGRES_DB=pg_name
POSTGRES_USER=pg_user
POSTGRES_PASSWORD=pg_pass
DATABASE_URL=postgresql+asyncpg://pg_user:pg_pass@db:5432/pg_name

